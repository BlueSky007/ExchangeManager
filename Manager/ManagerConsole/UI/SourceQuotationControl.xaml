<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ig="http://schemas.infragistics.com/xaml" x:Class="ManagerConsole.UI.SourceQuotationControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ig:XamGrid x:Name="dataGrid" AutoGenerateColumns="false" ColumnWidth="*">
            <ig:XamGrid.Columns>
                <ig:ColumnLayout Key="Quotations">
                    <ig:ColumnLayout.Columns>
                        <ig:TextColumn Key="Timestamp" HeaderText="Timestamp" />
                        <ig:TextColumn Key="Ask" HeaderText="Ask" />
                        <ig:TextColumn Key="Bid" HeaderText="Bid" />
                        <ig:TextColumn Key="High" HeaderText="High" />
                        <ig:TextColumn Key="Low" HeaderText="Low" />
                    </ig:ColumnLayout.Columns>
                </ig:ColumnLayout>
                <ig:TextColumn Key="Name" HeaderText="Source Name" />
            </ig:XamGrid.Columns>
        </ig:XamGrid>
    </Grid>
</UserControl>
